<%- include('partials/header') %>
  <div class="container">
    <%- include('partials/sidebar') %>

    <main class="main-content">
      <form class="post-form" action="<%= (locals.name && locals.message) ? '/edit-post' : '/submit-post' %>" method="POST">
        
        <% if(locals.name && locals.message){ %>
            <label for="name">Name:</label>
            <input type="text" id="name" name="editname" value="<%= name %>">
            <label for="message">Free your Mind....</label>
        <textarea id="message" name="editmessage" rows="5" placeholder="Type here...." required><%= message %></textarea>
            <% } else{%>
            <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="message">Free your Mind....</label>
        <textarea id="message" name="message" rows="5" placeholder="Type here...." required></textarea>
<% } %>
        <div class="button-group">
          <button type="reset" class="cancel">Cancel</button>
          <button type="submit">Submit</button>
        </div>
      </form>
    </main>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
