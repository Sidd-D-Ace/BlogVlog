              </form>
              <form action="/delete" method="POST" style="display: inline;">
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
          <p><%= element %></p>
          <p>Date</p>
        </div>
      <% }) %>
    <% } else { %>
